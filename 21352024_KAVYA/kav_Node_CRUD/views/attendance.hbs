<h3>ATTENDANCE</h3>

{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}

{{#each rows}}
<form action="/attendance/{{this.ID}}" method="post" autocomplete="false">
<div class = "form-group">
    <label for="name">NAME</label>
    <input type="text" name = "name" value="{{this.Name}}">
</div>

<div class = "form-group">
    <label for="registerNumber">REGISTER NUMBER</label>
    <input type="number" name = "registerNumber" value="{{this.RegisterNumber}}">
</div>

<div class = "form-group">
    <label for="institutionalMail">INSTITUTIONAL MAIL ID</label>
    <input type="mail" name = "institutionalMail" value="{{this.InstitutionalEmail}}">
</div>

<div class = "form-group">
    <label for="personalMail">PERSONAL MAIL ID</label>
    <input type="mail" name = "personalMail" value="{{this.PersonalEmail}}">
</div>

<div class = "form-group">
    <label for="mobile">MOBILE</label>
    <input type="number" name = "mobile" value="{{this.Mobile}}">
</div>

<div class = "form-group">
    <button type="submit">Save Changes</button>
    <a class="viewAll" href="/">View All</a>
</div>
</form>
{{/each}}